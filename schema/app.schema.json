{
  "schemaVersion": 1,
  "holding": {
    "type": "object",
    "required": [
      "id",
      "companyId",
      "companyName",
      "voucherType",
      "expiry",
      "createdAt",
      "updatedAt"
    ],
    "properties": {
      "id": {
        "type": "string",
        "description": "uuid"
      },
      "companyId": {
        "type": "string"
      },
      "companyName": {
        "type": "string"
      },
      "voucherType": {
        "type": "string",
        "enum": [
          "食事",
          "金券",
          "割引",
          "その他"
        ]
      },
      "expiry": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "amount": {
        "type": "integer",
        "minimum": 0,
        "description": "残金額（円換算）"
      },
      "shares": {
        "type": "integer",
        "minimum": 0
      },
      "note": {
        "type": "string"
      },
      "createdAt": {
        "type": "integer"
      },
      "updatedAt": {
        "type": "integer"
      }
    }
  },
  "catalog": {
    "type": "object",
    "required": [
      "version",
      "companies",
      "chains",
      "stores"
    ],
    "properties": {
      "version": {
        "type": "string"
      },
      "companies": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "id",
            "name",
            "chainIds",
            "voucherTypes"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "ticker": {
              "type": "string"
            },
            "chainIds": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "voucherTypes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "notes": {
              "type": "string"
            }
          }
        }
      },
      "chains": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "id",
            "companyIds",
            "displayName",
            "category",
            "tags",
            "voucherTypes"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "companyIds": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "displayName": {
              "type": "string"
            },
            "category": {
              "type": "string",
              "enum": [
                "飲食",
                "小売",
                "サービス",
                "交通",
                "宿泊",
                "その他"
              ]
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "voucherTypes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "url": {
              "type": "string"
            }
          }
        }
      },
      "stores": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "id",
            "chainId",
            "name",
            "address",
            "lat",
            "lng",
            "tags",
            "updatedAt"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "chainId": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "address": {
              "type": "string"
            },
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "updatedAt": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}